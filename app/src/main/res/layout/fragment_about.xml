<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"

            android:layout_margin="@dimen/view_layout_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/fragment_about_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="About NeverFap Deluxe"

                android:textSize="50sp"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:lineSpacingExtra="6sp"
        />

        <TextView
                android:id="@+id/fragment_about_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="20sp"
                android:lineSpacingExtra="2sp"

                android:text="NeverFap Deluxe is a porn addiciton recovery platform"
        />

    </LinearLayout>

</ScrollView>