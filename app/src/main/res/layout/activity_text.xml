<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_margin="@dimen/view_layout_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/activity_text_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                tools:text="How To Overcome Severe Crushing Porn Addiction"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                app:layout_constraintBottom_toTopOf="@+id/activity_text_view_date"
                android:textSize="50sp"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:lineSpacingExtra="6sp"
        />

        <TextView
                android:id="@+id/activity_text_view_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                tools:text="03/04/19"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_text_view_title" android:paddingBottom="42dp"
                android:paddingTop="16dp"/>

        <TextView
                android:id="@+id/activity_text_view_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                tools:text="@tools:sample/lorem/random"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_text_view_date" android:textSize="20sp"
                android:lineSpacingExtra="2sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>